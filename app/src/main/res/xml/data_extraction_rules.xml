<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive data from backup -->
        <exclude domain="sharedpref" path="encrypted_preferences.xml"/>
        <exclude domain="database" path="cloneData.db"/>
    </cloud-backup>
    <device-transfer>
        <!-- Exclude sensitive data from device transfer -->
        <exclude domain="sharedpref" path="encrypted_preferences.xml"/>
        <exclude domain="database" path="cloneData.db"/>
    </device-transfer>
</data-extraction-rules>